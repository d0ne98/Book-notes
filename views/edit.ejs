<%- include("partials/header.ejs") %>

<div class="addFormDiv">
<form class="add-form" action="/update" method="post">
  <input type="hidden" name="bookId" value="<%- book.id %>">
  <input class="book-title" type="text" name="bookTitle" value="<%=book.title%>"   autofocus>
  <input class="book-isbn" type="number"   name="bookIsbn" value="<%=book.isbn%>">
  <input class="book-score" type="number" min="0" max="10" step="0.1"  name="bookScore" value="<%=book.score%>" required>
  <input class="book-date" type="date" name="bookDate" value= "<%-book.date.toLocaleDateString('en-CA')%>" required>
  <textarea class="book-description" name="bookDescription"  required> <%-book.description%> </textarea>
  <input class="button" type="submit" name="Update">
</form>
</div>

<%- include("partials/footer.ejs") %>